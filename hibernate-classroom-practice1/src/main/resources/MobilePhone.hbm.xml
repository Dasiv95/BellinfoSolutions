<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
    <class name="com.bellinfo.hibernate.hibernate_classroom_practice1.MobilePhone" table="mobilephone" schema="public">
      <id name="mobileid">
      <generator class="increment"/>
      </id>
      <property name="brand"/>
      <property name="model"/>
      <property name="cost"/>
      <property name="memory"/>
    </class>
</hibernate-mapping>